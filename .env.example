# Database Configuration
DATABASE_URL=postgresql://mea_user:mea_password@localhost:5432/mea_core
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mea_core
DB_USER=mea_user
DB_PASSWORD=mea_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# Performance Settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
UVICORN_WORKERS=4
UVICORN_WORKER_CLASS=uvicorn.workers.UvicornWorker

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# File Upload
MAX_FILE_SIZE=16777216
UPLOAD_DIR=./uploads

# AI Model Settings
MODEL_CACHE_SIZE=1000
EMBEDDING_DIM=100
MIN_WORD_COUNT=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090